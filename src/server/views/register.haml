!!! 5
%html
  %head
    %meta{charset: "utf-8"}
    %title Register
  %body
    - if (errors)
      %ul
      - each error in errors
        %li= error
    %form{action: "/register", method: "post"}
      %label username
      %input{type: "text", name: "username"}
      %br
      %label password
      %input{type: "password", name: "password"}
      %br
      %label password confirmation
      %input{type: "password", name: "password_confirmation"}
      %br
      %input{type: "submit"}

